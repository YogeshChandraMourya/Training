@{
    ViewData["Title"] = "Home Page";
}

<style>
    form {
        border-style: solid;
       padding:1px;
    }
    hr.new{
        border:1.5px solid black ;
    }
    body{
        padding: 30px
    }
    img{
        height:200px;
     
    }

    .container {
        display: flex;
        align-items: flex-start;
        justify-content: left;
     
    }
