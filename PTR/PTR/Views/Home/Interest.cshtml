using System;
using System
@model PTR.Models.SimpleInterest

@{
    ViewBag.Title = "Interest";
}
<h2>Calulate Simple Interest</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <form>
        <label>Calulate Simple Interest</label>
        <div id="divInterestDeatils"></div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Principle)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Principle)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Rate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Rate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Time)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Time)
        </div>
        <p>
            <input type="submit" value="Calculate" />
        </p>
    </form>
